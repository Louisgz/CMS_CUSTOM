RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d

#API
# RewriteRule ^(api/posts/[a-z0-9-]+)(/?)([0-9]*)$ index.php?p=$1&id=$1&mainId=$1 [QSA,NC,L]
RewriteRule ^api/([a-z0-9-]+)(/?)([a-z0-9-]*)(/?)$ index.php?p=api/$1&id=$3 [QSA,NC,L]
# RewriteRule ^(api/[a-z0-9-]+)(/?)([0-9]*)$ index.php?p=$1&id=$3 [QSA,NC,L]

#Front
RewriteRule ^([a-z0-9-]+)(/?)([0-9]*)$ index.php?p=$1&id=$3 [QSA,NC,L]

